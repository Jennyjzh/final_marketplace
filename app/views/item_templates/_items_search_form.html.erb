<%= search_form_for @q, :class => collapse_search_form, :id => "items_filters" do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :title_cont, "Title contains" %>
    <%= f.text_field :title_cont, :class => "form-control", :placeholder => "Title contains" %>
  </div>

  <div class="form-group">
    <%= f.label :price_cont, "Price contains" %>
    <%= f.text_field :price_cont, :class => "form-control", :placeholder => "Price contains" %>
  </div>

  <div class="form-group">
    <%= f.label :description_cont, "Description contains" %>
    <%= f.text_field :description_cont, :class => "form-control", :placeholder => "Description contains" %>
  </div>

  <div class="form-group">
    <%= f.label :created_at, "Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='created_atgteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Created at greater than or equal to", :data => {:target => '#created_atgteqPicker'} %>
          <div class="input-group-append" data-target='#created_atgteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='created_atlteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Created at less than or equal to", :data => {:target => '#created_atlteqPicker'} %>
          <div class="input-group-append" data-target='#created_atlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#created_atgteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atgteqPicker').on("dp.change", function (e) {
              $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#created_atlteqPicker').on("dp.change", function (e) {
              $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <div class="form-group">
    <%= f.label :poster_email_cont, "User email contains" %>
    <%= f.text_field :poster_email_cont, :class => "form-control", :placeholder => "User email contains" %>
  </div>

  <div class="form-group">
    <%= f.label :created_at, "Location Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='locationgteqcreated_atPicker' data-target-input="nearest">
          <%= f.text_field :location_created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Location Created at greater than or equal to", :data => {:target => '#locationgteqcreated_atPicker'} %>
          <div class="input-group-append" data-target='#locationgteqcreated_atPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='locationlteqcreated_atPicker' data-target-input="nearest">
          <%= f.text_field :location_created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Location Created at less than or equal to", :data => {:target => '#locationlteqcreated_atPicker'} %>
          <div class="input-group-append" data-target='#locationlteqcreated_atPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#locationgteqcreated_atPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#locationlteqcreated_atPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#locationgteqcreated_atPicker').on("dp.change", function (e) {
              $('#locationlteqcreated_atPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#locationlteqcreated_atPicker').on("dp.change", function (e) {
              $('#locationgteqcreated_atPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>

  <div class="form-group">
    <%= f.label :created_at, "Status Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='statusgteqcreated_atPicker' data-target-input="nearest">
          <%= f.text_field :status_created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Status Created at greater than or equal to", :data => {:target => '#statusgteqcreated_atPicker'} %>
          <div class="input-group-append" data-target='#statusgteqcreated_atPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='statuslteqcreated_atPicker' data-target-input="nearest">
          <%= f.text_field :status_created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Status Created at less than or equal to", :data => {:target => '#statuslteqcreated_atPicker'} %>
          <div class="input-group-append" data-target='#statuslteqcreated_atPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#statusgteqcreated_atPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#statuslteqcreated_atPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#statusgteqcreated_atPicker').on("dp.change", function (e) {
              $('#statuslteqcreated_atPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#statuslteqcreated_atPicker').on("dp.change", function (e) {
              $('#statusgteqcreated_atPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>

  <div class="form-group">
    <%= f.label :item_type_category_cont, "Category category contains" %>
    <%= f.text_field :item_type_category_cont, :class => "form-control", :placeholder => "Category category contains" %>
  </div>


  <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

  <a href="/items" class="btn btn-outline-secondary btn-block mb-1">Clear filters</a>

<% end %>

