<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All items
    </h1>

    <a href="/items/new" class="btn btn-block btn-outline-secondary">
      Add a new item
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "item_templates/items_search_form" %>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-12">
    <%= render partial: "item_templates/all_photos_map" %>
  </div>
</div>

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Title
        </th>

        <th>
          Description
        </th>

        <th>
          Seller
        </th>

        <th>
          Price
        </th>

        <th>
          Address
        </th>

        <th>
          Photo
        </th>

        <th>
          Location
        </th>

        <th>
          Status
        </th>

        <th>
          Item type
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @items.each do |item| %>
      <tr>
        <td>
          <%= item.id %>
        </td>

        <td>
          <%= item.title %>
        </td>

        <td>
          <%= item.description %>
        </td>

        <td>
          <% if item.poster.present? %>
            <a href="/users/<%= item.poster.id %>">
              <%= item.poster.email %>
            </a>
          <% end %>
        </td>

        <td>
          <%= item.price %>
        </td>

        <td>
          <%= item.address %>
        </td>

        <td>
          <img src='<%= item.photo %>' class='img-fluid'>
        </td>

        <td>
          <% if item.location.present? %>
            <a href="/locations/<%= item.location.id %>">
              <%= item.location.created_at %>
            </a>
          <% end %>
        </td>

        <td>
          <% if item.status.present? %>
            <a href="/statuses/<%= item.status.id %>">
              <%= item.status.created_at %>
            </a>
          <% end %>
        </td>

        <td>
          <% if item.item_type.present? %>
            <a href="/categories/<%= item.item_type.id %>">
              <%= item.item_type.category %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(item.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(item.updated_at) %> ago
        </td>

        <td>
          <a href="/items/<%= item.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @items, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
